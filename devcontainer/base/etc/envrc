USER=$(whoami)

# load nix into environment
if [ -e $HOME/.nix-profile/etc/profile.d/nix.sh ] ; then
    . $HOME/.nix-profile/etc/profile.d/nix.sh
fi

# add $HOME/.nix-profile/share to XDG_DATA_DIRS, so completions for packages
# installed with nix work
if [ -e $HOME/.nix-profile ] ; then
    XDG_DATA_DIRS="$XDG_DATA_DIRS:$HOME/.nix-profile/share"
fi

# Also check for home-manager profile
if [ -e $HOME/.local/state/nix/profiles/home-manager ] ; then
    export PATH="$HOME/.local/state/nix/profiles/home-manager/home-path/bin:$PATH"
    XDG_DATA_DIRS="$XDG_DATA_DIRS:$HOME/.local/state/nix/profiles/home-manager/home-path/share"
fi

XDG_DATA_DIRS="$XDG_DATA_DIRS:/usr/share"

ENVRC_RUN=yes
